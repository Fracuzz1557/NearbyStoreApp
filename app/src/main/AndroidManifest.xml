<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NearbyApp"
        tools:targetApi="31">

        <!-- ✅ NUEVO: SplashActivity como pantalla inicial (LAUNCHER) -->
        <activity
            android:name=".Activites.Auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.NearbyApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ NUEVO: LoginActivity -->
        <activity
            android:name=".Activites.Auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.NearbyApp" />

        <!-- ✅ NUEVO: ProfileActivity -->
        <activity
            android:name=".Activites.Profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.NearbyApp" />

        <!-- ✅ NUEVO: FavoritesActivity -->
        <activity
            android:name=".Activites.Favorites.FavoritesActivity"
            android:exported="false"
            android:theme="@style/Theme.NearbyApp" />

        <!-- MainActivity (Dashboard) - YA NO es LAUNCHER -->
        <activity
            android:name=".Activites.Dashboard.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.NearbyApp" />

        <!-- ResultsActivity -->
        <activity
            android:name=".Activites.Dashboard.Results.ResultsActivity"
            android:exported="false"
            android:theme="@style/Theme.NearbyApp" />

        <!-- MapActivity -->
        <activity
            android:name=".Activites.Dashboard.Map.MapActivity"
            android:exported="false"
            android:theme="@style/Theme.NearbyApp" />

        <!-- ⚠️ Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCAwMsfcIAzVCK9cMFSruhlRANJMqHZTu4" />

    </application>

</manifest>